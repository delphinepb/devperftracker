datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int       @id @default(autoincrement())
  username String    @unique
  password String
  role     String
  analyses Analysis[] 
}

model Analysis {
  id       Int      @id @default(autoincrement())
  url      String
  score    Int
  date     DateTime @default(now())
  metrics  Json?
  userId   Int
  user     User     @relation(fields: [userId], references: [id])
}
